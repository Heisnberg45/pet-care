<div class="container">
   <h1>Edit Pet</h1>
   <form action="/pets/<%= pet.id %>" method="POST" enctype="multipart/form-data">
       <label for="name">Pet Name:</label>
       <input type="text" id="name" name="name" value="<%= pet.name %>" required>

       <label for="age">Age:</label>
       <input type="number" id="age" name="age" value="<%= pet.age %>" required>

       <label for="description">Description:</label>
       <textarea id="description" name="description" rows="4" required><%= pet.description %></textarea>

       <label for="pet_type">Pet Type:</label>
       <input type="text" id="pet_type" name="pet_type" value="<%= pet.pet_type %>" required>

       <label for="image">Image:</label>
       <input type="file" id="image" name="image">

       <label for="address">Address:</label>
       <input type="text" id="address" name="address" value="<%= pet.address %>" required>

       <button type="submit">Update Pet</button>
   </form>
</div>
