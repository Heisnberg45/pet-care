<div class="container">
    <h1>Add Pet</h1>
    <form action="/pets" method="POST" enctype="multipart/form-data">
        <label for="name">Pet Name:</label>
        <input type="text" id="name" name="name" required placeholder="Enter the pet's name">

        <label for="age">Age:</label>
        <input type="number" id="age" name="age" required placeholder="Enter the pet's age in years">

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required placeholder="Brief description about the pet"></textarea>

        <label for="pet_type">Pet Type:</label>
        <input type="text" id="pet_type" name="pet_type" required placeholder="E.g., Dog, Cat, Bird">

        <label for="image">Image:</label>
        <input type="file" id="image" name="image">

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" required placeholder="Enter your address">

        <button type="submit">Add Pet</button>
    </form>
</div>
